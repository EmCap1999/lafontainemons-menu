{
  "version": "1.0.0",
  "scripts": {
    "prepare": "husky",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "update-deps": "npm update && npm run update-deps:workspaces",
    "update-deps:workspaces": "npm run -ws update"
  },
  "workspaces": ["backend", "frontend", "db"],
  "lint-staged": {
    "**/*.{js,ts,json,html,scss}": [
      "biome check --write --files-ignore-unknown=true"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0"
  }
}
