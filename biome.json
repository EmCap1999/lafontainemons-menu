{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "package-lock.json",
      "node_modules/**/*",
      "frontend/.angular/**/*",
      "frontend/node_modules/**/*",
      "frontend/tsconfig*.json",
      "backend/node_modules/**/*",
      "db/node_modules/**/*",
      "db/migrations/**/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "bracketSpacing": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "complexity": {
        "noForEach": "error",
        "noStaticOnlyClass": "error",
        "noUselessSwitchCase": "error",
        "useDateNow": "error",
        "useFlatMap": "error"
      },
      "correctness": {
        "noInvalidBuiltinInstantiation": "error"
      },
      "style": {
        "noNegationElse": "off",
        "useExplicitLengthCheck": "error",
        "useForOf": "error",
        "useNodejsImportProtocol": "error",
        "useNumberNamespace": "error",
        "useThrowNewError": "error"
      },
      "suspicious": {
        "noDoubleEquals": "error",
        "noThenProperty": "error",
        "useErrorMessage": "error",
        "useNumberToFixedDigitsArgument": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto",
      "bracketSpacing": true
    },
    "globals": ["Global1"]
  },
  "overrides": [
    {
      "include": ["tests/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noDoubleEquals": "off"
          }
        }
      }
    },
    {
      "include": ["backend/**/*.js", "backend/**/*.ts"],
      "formatter": {
        "indentWidth": 2
      }
    },
    {
      "include": ["db/**/*.js", "db/**/*.ts"],
      "formatter": {
        "indentWidth": 2
      }
    },
    {
      "include": [
        "frontend/**/*.ts",
        "frontend/**/*.html",
        "frontend/**/*.scss"
      ],
      "formatter": {
        "indentWidth": 2
      }
    },
    {
      "include": ["frontend/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useForOf": "error",
            "useNodejsImportProtocol": "off"
          },
          "complexity": {
            "noForEach": "off"
          }
        }
      }
    },
    {
      "include": ["frontend/**/*.html"]
    },
    {
      "include": ["frontend/**/*.component.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "include": [
        "*.json",
        "frontend/**/*.json",
        "backend/**/*.json",
        "db/**/*.json"
      ],
      "formatter": {
        "indentWidth": 2
      }
    }
  ]
}
