{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": ["**", "!**/drizzle/meta"]
	},
	"formatter": {
		"lineWidth": 100
	},
	"linter": {
		"rules": {
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "off"
			}
		}
	},
	"html": {
		"parser": {
			"interpolation": true
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
